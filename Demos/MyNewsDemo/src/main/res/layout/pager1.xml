<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/pager1_ll">

    <com.example.mynewsdemo.MyViewPager
        android:id="@+id/vp1"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:background="@drawable/bei"
        android:flipInterval="300"
    	android:persistentDrawingCache="animation"
       />

    <LinearLayout

        android:layout_height="@dimen/pager_ll"
        android:layout_width="match_parent">
            <ImageView
               android:layout_gravity="center"
                android:background="@drawable/tab_consult_selected"
                android:layout_marginLeft="@dimen/view_width"
                android:layout_width="@dimen/pager_image_width"
                android:layout_height="@dimen/pager_image_height"/>
        <TextView
            android:textSize="@dimen/textSize"
            android:text="ssss"
            android:layout_marginLeft="@dimen/view_width"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"

            android:id="@+id/new_tv"
            android:layout_height="25dp"
            android:layout_width="0dp"
            android:layout_weight="2.6"
            android:layout_marginRight="5dp"/>

        <LinearLayout

            android:orientation="horizontal"
            android:id="@+id/new_ll"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/right_margin"
            ></LinearLayout>

