<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/item_more_ll"

        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/textSize"
                android:singleLine="true"
                android:text="@string/title_text"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/more_tv"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/textSize"
                android:textColor="@color/list_item_textColor"
                android:singleLine="true"
               android:gravity="right"
                android:text="785跟帖"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:id="@+id/more_tv2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            </LinearLayout>

        <LinearLayout
        
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_more_item_ll"
        android:orientation="horizontal"

        >
        <View android:layout_width="@dimen/view_width"
	    android:layout_height="match_parent"/>
        <ImageView
        android:layout_marginBottom="5dp"
        android:background="@color/list_images"
        android:id="@+id/more_iv1"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"/>
		<View android:layout_width="@dimen/view_width"
	    android:layout_height="match_parent"/>
        <ImageView
            android:layout_marginBottom="5dp"
            android:background="@color/list_images"
            android:id="@+id/more_iv2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
           android:scaleType="centerCrop"
             />

        <View android:layout_width="@dimen/view_width"
	    android:layout_height="match_parent"/>
        <ImageView
            android:layout_marginBottom="5dp"
            android:background="@color/list_images"
           android:scaleType="centerCrop"
            android:id="@+id/more_iv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             />
<View android:layout_width="@dimen/view_width"
	    android:layout_height="match_parent"/>
    </LinearLayout>

    </LinearLayout>

    

</LinearLayout>
